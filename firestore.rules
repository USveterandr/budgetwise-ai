rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes to prevent accidental data exposure.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile information.
    match /users/{userId} {
      // A user can only read or update their own document.
      allow read, update: if request.auth.uid == userId;
      // A user can create their own document upon signup or delete it.
      allow create, delete: if request.auth.uid == userId;
    }
  }
}
