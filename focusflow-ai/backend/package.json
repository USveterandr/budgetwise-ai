{
  "name": "focusflow-backend",
  "version": "1.0.0",
  "description": "FocusFlow AI Backend Microservices",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:services\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:services": "concurrently \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:task\" \"npm run dev:goal\" \"npm run dev:calendar\" \"npm run dev:ai\" \"npm run dev:notification\" \"npm run dev:analytics\"",
    "dev:auth": "cd services/auth && npm run dev",
    "dev:user": "cd services/user && npm run dev",
    "dev:task": "cd services/task && npm run dev",
    "dev:goal": "cd services/goal && npm run dev",
    "dev:calendar": "cd services/calendar && npm run dev",
    "dev:ai": "cd services/ai && npm run dev",
    "dev:notification": "cd services/notification && npm run dev",
    "dev:analytics": "cd services/analytics && npm run dev",
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "npm run build:auth && npm run build:user && npm run build:task && npm run build:goal && npm run build:calendar && npm run build:ai && npm run build:notification && npm run build:analytics",
    "build:auth": "cd services/auth && npm run build",
    "build:user": "cd services/user && npm run build",
    "build:task": "cd services/task && npm run build",
    "build:goal": "cd services/goal && npm run build",
    "build:calendar": "cd services/calendar && npm run build",
    "build:ai": "cd services/ai && npm run build",
    "build:notification": "cd services/notification && npm run build",
    "build:analytics": "cd services/analytics && npm run build",
    "test": "npm run test:shared && npm run test:services",
    "test:shared": "cd shared && npm test",
    "test:services": "npm run test:auth && npm run test:user && npm run test:task && npm run test:goal && npm run test:calendar && npm run test:ai && npm run test:notification && npm run test:analytics",
    "test:auth": "cd services/auth && npm test",
    "test:user": "cd services/user && npm test",
    "test:task": "cd services/task && npm test",
    "test:goal": "cd services/goal && npm test",
    "test:calendar": "cd services/calendar && npm test",
    "test:ai": "cd services/ai && npm test",
    "test:notification": "cd services/notification && npm test",
    "test:analytics": "cd services/analytics && npm test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf */node_modules */dist */build */coverage",
    "db:migrate": "cd shared/database && npm run migrate",
    "db:seed": "cd shared/database && npm run seed",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get all -n focusflow"
  },
  "workspaces": [
    "shared/*",
    "services/*",
    "api-gateway"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true
}
